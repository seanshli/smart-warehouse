# Production Environment Variables
# Copy this file and rename to .env.local for production deployment

# Database (Replace with your production database URL)
DATABASE_URL="postgresql://username:password@host:port/database"

# NextAuth.js Configuration
NEXTAUTH_URL="https://smart-warehouse-five.vercel.app"
NEXTAUTH_SECRET="your-production-secret-key-here"

# OpenAI API Configuration (if using AI features)
OPENAI_API_KEY="your-openai-api-key"
OPENAI_VISION_MODEL="gpt-4o"
OPENAI_TEXT_MODEL="gpt-4o-mini"
OPENAI_MAX_TOKENS="500"
OPENAI_TEMPERATURE="0.3"

# Capacitor Server URL for production
CAP_SERVER_URL="https://smart-warehouse-five.vercel.app"

# Optional: Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# iFLYTEK (科大訊飛) API Configuration
IFLYTEK_APP_KEY="your-iflytek-app-key"
IFLYTEK_APP_SECRET="your-iflytek-app-secret"
IFLYTEK_VERIFY_TOKEN="your-iflytek-verify-token"
IFLYTEK_AES_KEY="your-iflytek-aes-key"
AIUI_DEVICE_SERIAL="SMARTPAD000037"

# MQTT Broker Configuration (Production)
# Using EMQX as MQTT Broker (recommended for multi-brand IoT devices)
# EMQX Cloud or self-hosted EMQX with TLS/SSL
MQTT_BROKER_URL="mqtts://emqx.yourdomain.com:8883"
# For non-secure (not recommended): mqtt://emqx.yourdomain.com:1883
# EMQX Dashboard: https://emqx.yourdomain.com:18083
MQTT_USERNAME="smart-warehouse-prod"
MQTT_PASSWORD="your-strong-production-password"
MQTT_CLIENT_ID="smart-warehouse-production-client"
MQTT_KEEPALIVE="60"
MQTT_RECONNECT_PERIOD="1000"
MQTT_CONNECT_TIMEOUT="30000"

# Tuya API Configuration (for device provisioning)
# Get these from Tuya IoT Platform: https://iot.tuya.com/
# Region determines which Tuya API server to connect to (NOT your database location)
# Options: cn (China/Singapore/Asia-Pacific), us (US/Canada), eu (Europe), in (India)
# IMPORTANT: Region must match your Tuya project region in the Tuya IoT Platform
TUYA_ACCESS_ID="your-tuya-access-id"
TUYA_ACCESS_SECRET="your-tuya-access-secret"
TUYA_REGION="us"  # Use "us" for US West, "cn" for Singapore/China

# Midea API Configuration (for device provisioning)
# Get these from Midea IoT Platform: https://iot.midea.com/
MIDEA_APP_ID="your-midea-app-id"
MIDEA_APP_KEY="your-midea-app-key"

# Optional: Home Assistant integration
HOME_ASSISTANT_BASE_URL="https://your-home-assistant-instance.com"
HOME_ASSISTANT_ACCESS_TOKEN="your-long-lived-access-token"
