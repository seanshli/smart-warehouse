    "lint": "next lint",
    "setup": "node scripts/setup.js",
    "seed": "node scripts/seed.js",
    "update-openai": "node scripts/update-openai-config.js",
    "check-ai": "node scripts/check-ai-status.js",
    "reset": "./scripts/reset-server.sh",
